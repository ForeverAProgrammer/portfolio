{
  "proseWrap": "preserve",
  "singleQuote": true,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "proseWrap": "preserve",
        "printWidth": 80,
        "embeddedLanguageFormatting": "off"
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "printWidth": 80,
        "tabWidth": 2
      }
    }
  ]
}
